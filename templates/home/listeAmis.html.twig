{% extends 'base.html.twig' %}
{% block title %}Carnet d'amis - Liste des amis{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <h2>Liste des amis</h2>
    </div>

    <div class="d-grid w-75 mx-auto gap-5" style="grid-template-columns: repeat(5, 1fr);">
        {% for ami in amis %}
            <div class="card p-2 d-flex justify-content-center align-items-center">
                <div>
                    <img src="{{ asset('img/avatar/' ~ ami.avatar) }}" alt="..." class="img-fluid rounded-circle"> 
                </div>
                <div>
                    {{ ami.username }} 
                </div>
            </div> 
        {% else %}
            <div class="w-100 text-center">
                <p>Aucun ami trouv√©.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}