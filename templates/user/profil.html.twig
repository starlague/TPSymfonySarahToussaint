{% extends 'base.html.twig' %}

{% block title %}Carnet d'amis - Profil de {{ user.username}} {% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="d-flex card w-25 align-items-center p-3">
        <h2>Votre profil</h2>

        <img src="{{ asset('img/avatar/' ~ user.avatar) }}" alt="..." class="img-fluid rounded">
        <p><strong>Nom d'utilisateur :</strong> {{ user.username }}</p>

        <p><strong>Email :</strong> {{ user.email }}</p>

        <div class="d-flex gap-5">
            <a href="{{ path('app_modifier_profil', { id: user.id }) }}" class="button">Modifier</a>
            <a href="{{ path('app_supprimer_utilisateur', { id: user.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?')" class="button cancel">Supprimer votre compte</a>
        </div>
    </div>
</div>
{% endblock %}