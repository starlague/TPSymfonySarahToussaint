<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Carnet d'amis{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>

    <body>
        <header>
            {% block header %}
            <div class="d-flex align-items-center">
                <h1>Carnet d'amis</h1>
                <div class="ms-auto">
                    {% if app.user %}
                        <a href="{{ path('app_logout') }}" class="button logout">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="button log">Connexion<a/>
                        <a href="{{ path('app_register') }}" class="button sign">Inscription<a/>
                    {% endif %}
                </div>
            </div>
            {% endblock %}
        </header>
        <br>
        <main>
            <nav>
                <a href="{{ path('app_home') }}" class="button">Accueil</a>
                <a href="{{ path('app_liste_utilisateurs') }}" class="button">Liste des utilisateurs</a>
                <a href="" class="button">Demandes d'amis</a>
            </nav>
            {% block body %}{% endblock %}
        </main>
        <footer>
            {% block footer %}
            <div class="d-grid p-4 gap-5" style="grid-template-columns: repeat(3, 1fr);">
                <div class="">
                    <p class="fs-4"><strong>Liens utiles :</strong></p>
                    <ul>
                        <li><a href="https://www.flaticon.com/fr/auteurs/yaicon" class="not-underline">Icons</a></li>
                        <li><a href="https://getbootstrap.com/" class="not-underline">Bootstrap</a></li>
                    </ul>
                </div>
                <div>
                    <p class="fs-4"><strong>Informations légales :</strong></p>
                    <ul>
                        <li><a href="" class="not-underline">Mentions légales</a></li>
                        <li><a href="" class="not-underline">Politique de confidentialité</a></li>
                        <li><a href="" class="not-underline">CGU</a></li>
                    </ul>
                </div>
                <div>
                    <p class="fs-4"><strong>À propos :</strong></p>
                    <ul>
                        <li><a href="" class="not-underline">Nous</a></li>
                        <li><a href="{{ path('app_contact') }}" class="not-underline">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center">
                <p>&copy; 2025 - Carnet d'amis. Tous droits réservés.</p>
            </div>
            {% endblock %}
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>
